@model Eason.Admin.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>匹优爱后台管理系统</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
<style media="screen">
  .logoadmin {
    width: 303px;
    height: 48px;
    margin: 100px auto 20px;
  }
  .logoadmin img{display: block; width: 100%; height: 100%;}
  .panel-default > .panel-heading {
    color: #fff;
    background-color: #293c8b;
  }
  .panel-title {
    font-weight: bold;
    text-align: center;
    font-size: 18px;
  }
  .btn-success {
    background-color: #e30083;
    border-color: #e30083;
  }
  .btn-success:hover{
    background-color: #b9006b;
    border-color: #b9006b;
  }
</style>
    </head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="container">
            <div class="row">
                <div class="logoadmin"><img src="http://instwin.com/act/upas/images/ulogo.png" alt="" /></div>
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">后台管理系统</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="请输入姓名！" name="account" type="text" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="请输入密码" name="password" type="password" value="">
                                    </div>
                                    @*<div class="checkbox">
                                            <label>
                                                <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                            </label>
                                        </div>*@
                                    <button class="btn btn-lg btn-success btn-block" type="submit">登录</button>
                                    <!-- Change this to a button or input when using this as a form -->
                                    @Html.ValidationSummary()
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</body>
</html>
