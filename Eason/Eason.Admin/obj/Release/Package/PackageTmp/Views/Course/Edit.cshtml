@model Eason.EntityFramework.Entities.School.Course
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="//cdn.bootcss.com/bootstrap-table/1.11.1/bootstrap-table.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="//cdn.bootcss.com/bootstrap-table/1.11.1/bootstrap-table.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap-table/1.11.1/locale/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/utf8-net/ueditor.config.js"></script>

    <script src="~/utf8-net/ueditor.all.min.js"></script>

    <script src="~/utf8-net/lang/zh-cn/zh-cn.js"></script>

</head>
<body>
    <div class="panel-body" style="padding-bottom:0px;">
        <div class="panel panel-default">
            <div class="panel-heading">编辑导师信息</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal" method="post">

                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程类型</label>
                        <div>
                            <select id="ty" name="ty" class="form-control">
                                @{
                                    if (Model.ty == "taocan")
                                    {
                                        <option value="taocan">套餐</option>
                                        <option value="onetoone">一对一</option>
                                        <option value="course">课程</option>
                                    }
                                    else if (Model.ty == "onetoone")
                                    {
                                        <option value="onetoone">一对一</option>
                                        <option value="taocan">套餐</option>

                                        <option value="course">课程</option>
                                    }
                                    else
                                    {
                                        <option value="course">课程</option>
                                        <option value="taocan">套餐</option>
                                        <option value="onetoone">一对一</option>

                                    }
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程图片 <span style="padding-left:12px;font-size:12px;font-weight: normal;opacity:.6;">尺寸：428*227</span></label>
                        <div class="form-inline " style="margin-left:5px;">
                            <input type="file" id="file1" style="float:left;" />
                            <input type="button" class="btn btn-default" style="float:left;" id="btn-kec" value="上传" />
                        </div>
                        <div>
                            <input id="kpic" class="form-control" type="text" name="kpic" value="@Model.kpic" />
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程地址</label>
                        <div>
                            <input type="text" class="form-control" id="kurl" name="kurl" value="@Model.kurl"/>
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程标题</label>
                        <div>
                            <input type="text" class="form-control" id="ktitle" name="ktitle" value="@Model.ktitle">
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程学习人数 <span style="padding-left:12px;font-size:12px;font-weight: normal;opacity:.6;">填写示例：89</span></label>
                        <div>
                            <input type="text" class="form-control" id="kpop" name="kpop" value="@Model.kpop">
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程小图展示<span style="padding-left:12px;font-size:12px;font-weight: normal;opacity:.6;">尺寸：102*54 填写示例：xxx.jpg,yyy.jpg,zzz.png</span></label>

                        <div class="form-inline " style="margin-left:5px;">
                            <input type="file" id="file2" style="float:left;" />
                            <input type="button" class="btn btn-default" style="float:left;" id="btn-upload" value="上传" />
                        </div>
                        <div>
                            <textarea cols="3" class="form-control" id="kspic" name="kspic">@Model.kspic</textarea>
                        </div>
                    </div>

                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">教师姓名</label>
                        <div>
                            <input type="text" class="form-control" id="kteach" name="kteach"  value="@Model.kteach">
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程时节<span style="padding-left:12px;font-size:12px;font-weight: normal;opacity:.6;">填写示例：课时1节</span></label>
                        <div>
                            <input type="text" class="form-control" id="kshi" name="kshi" value="@Model.kshi">
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程描述</label>
                        <div>
                            <input type="text" class="form-control" id="kmiao" name="kmiao" value="@Model.kmiao">
                        </div>
                    </div>
                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:550px;">
                        <label for="txt-title">课程价格 <span style="padding-left:12px;font-size:12px;font-weight: normal;opacity:.6;">填写示例：￥10.00--￥20.00 或者 ￥10.00/学员价￥10.00 或者￥10.00</span></label>
                        <div>
                            <input type="text" class="form-control" id="kmony" name="kmony" value="@Model.kmony">
                        </div>
                    </div>


                    <div class="form-group " style="margin-top:15px;margin-left:20px; width:200px;">

                        <div class="form-inline">
                            <input type="submit" class="btn btn-default" id="btn-publish" value="发 布">

                        </div>
                    </div>
                    <div class="form-group " style="margin-top:50px;margin-left:20px; width:200px;">
                        <input type="hidden" id="id" name="id" value="@Model.id" />

                    </div>
                </form>
            </div>



        </div>
    </div>
    <script type="text/javascript">


        $("#btn-upload").click(function () {

            var formData = new FormData();
            formData.append("upfile", document.getElementById("file2").files[0]);
            $.ajax({
                url: "http://www.piyouai.com:8081/baidueditor.ashx?action=uploadimage",
                type: "POST",
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    var jsonData = JSON.parse(data);
                    if (jsonData.state == "SUCCESS") {
                        var temp = $("#kspic").val();

                        if (temp != null && temp != "") {
                            $("#kspic").val(temp + "," + "http://www.piyouai.com:8081/new/" + jsonData.url);
                        }
                        else {
                            $("#kspic").val("http://www.piyouai.com:8081/new/" + jsonData.url);
                        }

                    }
                    else {
                        alert("上传失败！");
                    }

                },
                error: function () {
                    alert("上传失败！");

                }
            });
        });
        $("#btn-kec").click(function () {

            var formData = new FormData();
            formData.append("upfile", document.getElementById("file1").files[0]);
            $.ajax({
                url: "http://www.piyouai.com:8081/baidueditor.ashx?action=uploadimage",
                type: "POST",
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    var jsonData = JSON.parse(data);
                    if (jsonData.state == "SUCCESS") {

                        $("#kpic").val("http://www.piyouai.com:8081/new/" + jsonData.url);
                    }
                    else {
                        alert("上传失败！");
                    }

                },
                error: function () {
                    alert("上传失败！");

                }
            });
        });

    </script>


</body>
</html>
